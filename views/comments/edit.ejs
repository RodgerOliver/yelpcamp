<% include ../partials/header %>

<div class="container">
	<h1 class="text-center">Edit Comment</h1>
	<div class="form">
		<form action="/camps/<%= campId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<textarea class="form-control" name="comment[text]" required><%= comment.text %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
			</div>
		</form>
		<a href="/camps/<%= campId %>">Cancel</a>
		<form class="right" action="/camps/<%= campId %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
				<button class="delBtn">Delete</button>
		</form>
	</div>
</div>

<% include ../partials/footer %>