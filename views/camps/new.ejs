<% include ../partials/header %>

<div class="container">
	<h1 class="text-center">Create a New Campground</h1>
	<div class="form">
		<form action="/camps" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="Name" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="url" name="image" placeholder="Image URL" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01" required>
			</div>
			<div class="form-group">
				<textarea class="form-control" name="description" placeholder="Description" required></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
			</div>
		</form>
		<a href="/camps">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>